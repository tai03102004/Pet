extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/section-3.pug
include ../../mixins/product-layoutHome.pug
block main 
    .section-1
        .container
            .section-1__wrap
                .section-1__content
                    .section-1__bg-head
                    img(src="./client/images/anh-2.svg" class="section-1__bg-1")
                    h1.section-1__title Thêm một bạn
                    h2.section-1__sub-title Thêm ngàn niềm vui
                    .section-1__desc Có một con chó cưng cũng đồng nghĩa có thêm một niềm vui mới. Chúng tôi có hơn 200 con thú cưng khác nhau có thể đáp ứng nhu cầu của bạn!
                    .section-1__buttons
                        a(href="#" class="button") Giới thiệu 
                            i(class="fa-regular fa-circle-play")
                        a(href="#" class="button button-primary") Khám Phá Ngay
                    img(src="./client/images/anh-3.svg" class="section-1__bg-2")
                div(class="section-1__image")
                    img(class="section-1__thumb" src="./client/images/anh-1.png" alt="anh")
                    img(src="./client/images/anh-4.svg" class="section-1__bg-3")
                    img(src="./client/images/anh-5.svg" class="section-1__bg-4")
    .section-2
        .container
            .box-head
                .box-head__left
                    .box-head__sub-title Có gì mới?
                    .box-head__title Một số vật nuôi của chúng tôi
                .box-head__right
                    a(href="#" class="button")
                        | Xem thêm 
                        i(class="fa-solid fa-chevron-right")
            +product-grid(products) 
    +section-3
    .section-4
        .container
            .box-head
                .box-head__left
                    .box-head__subtitle Có thể bạn đã biết?
                    h2.box-head__title Kiến thức thú cưng hữu ích
                .box-head__right
                    a(href="#" class="button") Xem thêm 
                        <i class="fa-solid fa-chevron-right"></i>
            -
                var blogs = [
                    {
                        image: 'client/images/image 3.jpg',
                        tag: 'Kiến thức thú cưng',
                        title: 'Pomeranian là gì? Cách nhận biết chó Pomeranian',
                        desc: 'Pomeranian hay còn gọi là chó Pomeranian (chó Pom) luôn nằm trong top những thú cưng dễ thương nhất. Không chỉ vậy, giống chó xiếc nhỏ nhắn, đáng yêu, thông minh, thân thiện và khéo léo.'
                    },
                    {
                        image: 'client/images/image 4.jpg',
                        tag: 'Kiến thức thú cưng',
                        title: 'Chế độ ăn cho chó bạn cần biết',
                        desc: 'Việc chia khẩu phần ăn cho chó thoạt nghe có vẻ đơn giản nhưng có một số quy tắc bạn nên biết để chó cưng dễ dàng hấp thụ các chất dinh dưỡng trong khẩu phần ăn. Dành cho những người mới bắt đầu nuôi chó, đặc biệt là chó con mới sinh có sức đề kháng tương đối yếu.'
                    },
                    {
                        image: 'client/images/image 5.jpg',
                        tag: 'Kiến thức thú cưng',
                        title: 'Tại sao chó cắn phá đồ đạc và cách phòng ngừa hiệu quả',
                        desc: 'Chó cắn là hiện tượng phổ biến trong quá trình phát triển. Tuy nhiên, không ai muốn thấy đồ đạc, vật dụng quan trọng của mình bị chó cắn.'
                    }
                ];
            .section-4__wrap
                each blog in blogs
                    .section-4__item
                        .section-4__image
                            a(href="#")
                                img(src=blog.image)
                        .section-4__knowleadge #{blog.tag}
                        .section-4__title #{blog.title}
                        .section-4__subtitle #{blog.desc}
                    
            .section-4__button-button
                a(href="#" class="button") Xem thêm 
                    <i class="fa-solid fa-chevron-right"></i>
